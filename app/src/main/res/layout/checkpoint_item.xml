<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground">

    <com.adapei.navhelper.SquareImageView
        android:id="@+id/imageCheckpoint"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/item_pic_bg"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ami"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginBottom="-1dp"
        android:paddingTop="15dp"/>

    <TextView
        android:id="@+id/textCheckpoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="21dp"
        android:paddingTop="21dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/xml_nulltext"
        android:textAllCaps="true"
        android:textColor="@color/greenADAPEI"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/item_text_bg"
        android:backgroundTint="@color/colorPrimary" />

</LinearLayout>